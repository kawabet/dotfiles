{
  "title": "Caps LockをESCにする",
  "rules": [
    {
      "description": "Caps Lockを単体で押したときにESCと英数キーを送信する。長押しするとCtrキーを送信する。",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 100
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "japanese_eisuu"
            },
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    }
  ]
}
